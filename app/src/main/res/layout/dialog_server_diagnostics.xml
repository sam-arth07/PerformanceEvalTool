<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/diagnostics_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diagnostics_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp" />

    <ProgressBar
        android:id="@+id/diagnostics_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/diagnostics_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checking_server_status"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/diagnostics_result_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/diagnostics_result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/diagnostics_result_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2" />

    </LinearLayout>

</LinearLayout>
